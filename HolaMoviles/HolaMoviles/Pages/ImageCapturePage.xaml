<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="HolaMoviles.ImageCapturePage" Title="Capture">
	<ContentPage.Resources>
		<ResourceDictionary>
			<Style TargetType="Button">
				<Setter Property="Margin" Value="5,0,5,0" />
			</Style>
		</ResourceDictionary>
	</ContentPage.Resources>
	<ScrollView x:Name="Scroller">
		<StackLayout Orientation="Vertical">
			<StackLayout Orientation="Horizontal">
				
				<Button x:Name="buttonCapture" Text="Capture" />
				<Button x:Name="buttonBrowse" Text="Browse" />

				<Button x:Name="buttonAnalyze" Text="Analyze" />

				<Button x:Name="buttonSave" Text="Save" HorizontalOptions="End" />
			</StackLayout>
			
			<StackLayout Orientation="Vertical"
						 BindingContext="{Binding CaptureResult}">
				<StackLayout Orientation="Vertical">
					<Label Text="{Binding Description}" />
					<StackLayout Orientation="Horizontal">
						<BoxView Style="{DynamicResource ColorBoxView}" 
								 Color="{Binding PrimaryColor}" />
						<BoxView Style="{DynamicResource ColorBoxView}" 
								 Color="{Binding AccentColor}" />
						<BoxView Style="{DynamicResource ColorBoxView}" 
								 Color="{Binding SecondaryColor}" />
					</StackLayout>
				</StackLayout>
				<ContentView x:Name="MediaContainer" />
			</StackLayout>
		</StackLayout>
	</ScrollView>
</ContentPage>